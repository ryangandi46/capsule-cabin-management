generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id          String   @id @default(cuid())
  name        String   @unique
  // disimpan string agar label status bisa pakai spasi
  type        String   // "capsule" | "cabin"
  status      String   // "Available" | "Occupied" | "Cleaning In Progress" | "Maintenance Needed"
  lastUpdated DateTime @updatedAt

  @@index([type])
  @@index([status])
}
