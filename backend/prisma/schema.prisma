generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // "capsule" | "cabin"
  status      String   // "Available" | "Occupied" | "Cleaning In Progress" | "Maintenance Needed"
  lastUpdated DateTime @updatedAt

  @@index([type])
  @@index([status])
}
